<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>

    <definition name="layout" template="/WEB-INF/views/layout.jsp">
        <put-attribute name="title" value=""/>
        <put-attribute name="heading" value="title"/>
        <put-attribute name="body" value=""/>
        <put-list-attribute name="css">
            <add-attribute value="bootstrap.min.css"/>
            <add-attribute value="bootstrap-responsive.min.css"/>
            <add-attribute value="application.css"/>
            <add-attribute value="application-layout.css"/>
        </put-list-attribute>
        <put-list-attribute name="js">
            <add-attribute value="jquery.min.js"/>
            <add-attribute value="bootstrap.min.js"/>
        </put-list-attribute>
        <put-list-attribute name="i18n">
        </put-list-attribute>
    </definition>

    <definition name="layoutAngular" extends="layout">
        <put-list-attribute name="js" inherit="true">
            <add-attribute value="angular.min.js"/>
            <add-attribute value="angular-cookies.min.js"/>
            <add-attribute value="angular-datetime.js"/>
            <add-attribute value="angular-extension.js"/>
            <add-attribute value="angular-pagination.js"/>
            <add-attribute value="angular-resource.min.js"/>
            <add-attribute value="angular-sanitize.min.js"/>
            <add-attribute value="angular-tooltip.js"/>
        </put-list-attribute>
    </definition>

    <definition name="layoutAngularForm" extends="layoutAngular">
        <put-list-attribute name="css" inherit="true">
            <add-attribute value="bootstrap-datetimepicker.css"/>
            <add-attribute value="ui-select2.css"/>
        </put-list-attribute>
        <put-list-attribute name="js" inherit="true">
            <add-attribute value="bootstrap-datetimepicker.min.js"/>
            <add-attribute value="moment.min.js"/>
            <add-attribute value="ui-select2.min.js"/>
        </put-list-attribute>
        <put-list-attribute name="i18n" inherit="true">
            <add-attribute value="bootstrap-datetimepicker"/>
            <add-attribute value="select2"/>
        </put-list-attribute>
    </definition>

    <definition name="controllerNotAvailable" extends="layout">
        <put-attribute name="title" value="views.controllerNotAvailable.title"/>
        <put-attribute name="heading" value=""/>
        <put-attribute name="body" value="/WEB-INF/views/controllerNotAvailable.jsp" type="template"/>
    </definition>

    <definition name="indexAnonymous" extends="layout">
        <put-attribute name="title" value="views.index.title"/>
        <put-attribute name="body" value="/WEB-INF/views/index.jsp" type="template"/>
    </definition>
    <definition name="indexAuthenticated" extends="layoutAngular">
        <put-attribute name="title" value="views.index.title"/>
        <put-attribute name="body" value="/WEB-INF/views/index.jsp" type="template"/>
    </definition>

    <definition name="changelog" extends="layout">
        <put-attribute name="title" value="views.changelog.title"/>
        <put-attribute name="body" value="/WEB-INF/views/changelog.jsp" type="template"/>
    </definition>

    <definition name="message" extends="layout">
        <put-attribute name="title" value="views.message.title"/>
        <put-attribute name="heading" value=""/>
        <put-attribute name="body" value="/WEB-INF/views/message.jsp" type="template"/>
    </definition>

    <definition name="wizard" extends="layoutAngularForm">
        <put-attribute name="body" value="wizardBody" type="definition"/>
        <put-attribute name="heading" value=""/>
        <put-list-attribute name="title">
            <add-attribute value="views.wizard.title"/>
            <add-attribute expression="${wizardPageCurrent.titleCode}"/>
        </put-list-attribute>
        <put-list-attribute name="css" inherit="true">
            <add-attribute value="wizard.css"/>
        </put-list-attribute>
    </definition>
    <definition name="wizardBody" template="/WEB-INF/views/wizard.jsp">
        <put-attribute name="content" value="wizardContent" type="definition"/>
    </definition>
    <definition name="wizardContent" templateExpression="${wizardContent}">
    </definition>

    <definition name="reservationRequestList" extends="layoutAngular">
        <put-attribute name="title" value="views.reservationRequestList.title"/>
        <put-attribute name="body" value="/WEB-INF/views/reservationRequestList.jsp" type="template"/>
    </definition>

    <definition name="reservationRequestDetail" extends="layoutAngular">
        <put-attribute name="title" value="views.reservationRequestDetail.title"/>
        <put-attribute name="heading" value=""/>
        <put-attribute name="body" value="/WEB-INF/views/reservationRequestDetail.jsp" type="template"/>
    </definition>

    <definition name="reservationRequestUpdateBody" template="/WEB-INF/views/reservationRequestUpdate.jsp">
        <put-attribute name="confirm" value=""/>
    </definition>

    <definition name="reservationRequestCreate" extends="layoutAngularForm">
        <put-attribute name="title" value="views.reservationRequestCreate.title"/>
        <put-attribute name="body" value="reservationRequestCreateBody" type="definition"/>
    </definition>
    <definition name="reservationRequestCreateBody" extends="reservationRequestUpdateBody">
        <put-attribute name="confirm" value="views.button.create"/>
    </definition>

    <definition name="reservationRequestModify" extends="layoutAngularForm">
        <put-attribute name="title" value="views.reservationRequestModify.title"/>
        <put-attribute name="body" value="reservationRequestModifyBody" type="definition"/>
    </definition>
    <definition name="reservationRequestModifyBody" extends="reservationRequestUpdateBody">
        <put-attribute name="confirm" value="views.button.save"/>
    </definition>

    <definition name="reservationRequestDelete" extends="layout">
        <put-attribute name="title" value="views.reservationRequestDelete.title"/>
        <put-attribute name="body" value="/WEB-INF/views/reservationRequestDelete.jsp" type="template"/>
    </definition>

    <definition name="aclRecordCreate" extends="layout">
        <put-attribute name="title" value="views.aclRecordCreate.title"/>
        <put-attribute name="body" value="/WEB-INF/views/aclRecordCreate.jsp" type="template"/>
        <put-list-attribute name="css" inherit="true">
            <add-attribute value="ui-select2.css"/>
        </put-list-attribute>
        <put-list-attribute name="js" inherit="true">
            <add-attribute value="ui-select2.min.js"/>
        </put-list-attribute>
    </definition>

    <definition name="room" extends="layoutAngular">
        <put-attribute name="title" value="views.room.title"/>
        <put-attribute name="body" value="/WEB-INF/views/room.jsp" type="template"/>
    </definition>

</tiles-definitions>