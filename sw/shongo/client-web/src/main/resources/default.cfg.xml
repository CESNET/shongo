<?xml version="1.0" encoding="UTF-8" ?>

<!-- Default Configuration of Domain Controller -->
<configuration>

    <!-- Web server configuration -->
    <server>
        <port>80</port>
        <ssl-port>443</ssl-port>
        <ssl-key-store></ssl-key-store>
        <ssl-key-store-password></ssl-key-store-password>
    </server>

    <!-- Controller url -->
    <controller>127.0.0.1:8181</controller>

    <!-- Application title suffix -->
    <title-suffix>(BETA)</title-suffix>

    <!-- Contact email -->
    <contact>vidcon@cesnet.cz</contact>
    <!-- Administrator email -->
    <administrator></administrator>

    <!-- Authorization -->
    <security>
        <!-- AA server -->
        <server>https://shongo-auth-dev.cesnet.cz</server>
        <!-- Client ID and secret and redirect URI for AA server  -->
        <client-id>shongo-client-web</client-id>
        <client-secret>testclientsecret</client-secret>
        <redirect-uri>http://127.0.0.1:8182/</redirect-uri>
    </security>

    <!-- Configuration for sending emails -->
    <smtp>
        <sender>no-reply@shongo.cz</sender>
        <!--<host></host>-->
        <port>25</port>
        <subject-prefix xml:space="preserve">[shongo-web] </subject-prefix>
    </smtp>

</configuration>