<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <context:annotation-config/>

    <!-- Application -->
    <bean id="controller" class="cz.cesnet.shongo.controller.Controller" init-method="startAll" destroy-method="stop">
        <constructor-arg type="java.lang.String" value="controller.cfg.xml"/>
        <property name="entityManagerFactory" ref="entityManagerFactory"/>
        <property name="services">
            <bean class="cz.cesnet.shongo.controller.util.BeanListFactoryBean">
                <property name="beanType" value="cz.cesnet.shongo.api.xmlrpc.Service"/>
            </bean>
        </property>
        <property name="components">
            <bean class="cz.cesnet.shongo.controller.util.BeanListFactoryBean">
                <property name="beanType" value="cz.cesnet.shongo.controller.Component"/>
            </bean>
        </property>
    </bean>

    <!-- Components -->
    <bean id="cache" class="cz.cesnet.shongo.controller.Cache"/>
    <bean id="preprocessor" class="cz.cesnet.shongo.controller.Preprocessor"/>
    <bean id="scheduler" class="cz.cesnet.shongo.controller.Scheduler">
        <property name="cache" ref="cache"/>
    </bean>
    <bean id="executor" class="cz.cesnet.shongo.controller.Executor"/>

    <!-- Services -->
    <bean id="commonService" class="cz.cesnet.shongo.controller.api.CommonServiceImpl"/>
    <bean id="resourceService" class="cz.cesnet.shongo.controller.api.ResourceServiceImpl">
        <property name="cache" ref="cache"/>
    </bean>
    <bean id="resourceControlService" class="cz.cesnet.shongo.controller.api.ResourceControlServiceImpl"/>
    <bean id="reservationService" class="cz.cesnet.shongo.controller.api.ReservationServiceImpl"/>
    <bean id="roomService" class="cz.cesnet.shongo.controller.api.RoomServiceImpl"/>

    <!-- Entity Manager Factory -->
    <bean id="entityManagerFactory" class="javax.persistence.Persistence" factory-method="createEntityManagerFactory">
        <constructor-arg type="java.lang.String" value="controller"/>
    </bean>

</beans>