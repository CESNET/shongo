<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <context:annotation-config/>

    <!-- Domain configuration -->
    <bean id="domain" class="cz.cesnet.shongo.controller.Domain">
        <property name="codeName"><value>cz.cesnet</value></property>
        <property name="name"><value>CESNET, z.s.p.o.</value></property>
    </bean>

    <!-- Application -->
    <bean id="controller" class="cz.cesnet.shongo.controller.Controller"/>

    <!-- Components -->
    <bean id="resourceDatabase" class="cz.cesnet.shongo.controller.resource.ResourceDatabase" init-method="init" destroy-method="destroy">
        <property name="domain"><ref bean="domain"/></property>
        <property name="entityManager"><ref bean="entityManager"/></property>
    </bean>
    <bean id="reservationDatabase" class="cz.cesnet.shongo.controller.reservation.ReservationDatabase" init-method="init" destroy-method="destroy">
        <property name="domain"><ref bean="domain"/></property>
        <property name="entityManager"><ref bean="entityManager"/></property>
    </bean>
    <bean id="scheduler" class="cz.cesnet.shongo.controller.scheduler.Scheduler" destroy-method="destroy">
        <property name="entityManager"><ref bean="entityManager"/></property>
    </bean>

    <!-- Services -->
    <bean id="commonService" class="cz.cesnet.shongo.controller.impl.CommonServiceImpl"/>
    <bean id="resourceService" class="cz.cesnet.shongo.controller.impl.ResourceServiceImpl"/>
    <bean id="reservationService" class="cz.cesnet.shongo.controller.impl.ReservationServiceImpl"/>
    <bean id="roomService" class="cz.cesnet.shongo.controller.impl.RoomServiceImpl"/>

    <!-- Entity Manager Factory -->
    <bean id="entityManagerFactory"
          class="javax.persistence.Persistence"
          factory-method="createEntityManagerFactory">
        <constructor-arg>
            <value>controller</value>
        </constructor-arg>
    </bean>

    <!-- Entity Manager -->
    <bean id="entityManager" factory-bean="entityManagerFactory" factory-method="createEntityManager"/>

</beans>