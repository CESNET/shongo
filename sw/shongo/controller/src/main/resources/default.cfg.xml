<?xml version="1.0" encoding="UTF-8" ?>

<!-- Default Configuration of Domain Controller -->
<configuration>

    <!-- Specifies whether XML-RPC requests and responses should be logged -->
    <log-rpc>false</log-rpc>

    <!-- Configuration of controlled domain -->
    <domain>
        <name>unknown</name>
        <organization>Unknown Organization</organization>
    </domain>

    <!-- Configuration of XML-RPC server -->
    <rpc>
        <host></host>
        <port>8181</port>
    </rpc>

    <!-- Configuration of Jade container -->
    <jade>
        <host>127.0.0.1</host>
        <port>8282</port>
        <platform-id>Shongo</platform-id>
    </jade>

    <!-- Worker starts periodically preprocessor and scheduler -->
    <worker>
        <!-- Period in which the worker is periodically working -->
        <period>PT10S</period>
        <!-- Length of working interval -->
        <interval>P31D</interval>
    </worker>

    <!-- Resources configuration -->
    <resource>
        <!-- Configuration for allocations of device resources -->
        <device-allocation>
            <!-- Maximum duration of a single allocation -->
            <max-duration>P6D</max-duration>
        </device-allocation>
    </resource>

</configuration>