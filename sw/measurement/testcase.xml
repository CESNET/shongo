<?xml version="1.0" encoding="UTF-8"?>

<launcher>
    <variable name="host" default-value="127.0.0.1" />
    <variable name="count" value="2" />

    <instance id="jvm1" type="local">
        {run-platform} --agent=s --type=sender --count={count}
    </instance>
    <instance id="jvm2" type="remote" host="{host}">
        {run-platform} --agent=r --type=receiver --count={count}
    </instance>

    <sleep duration="5000" />

    <step>
        <command for="jvm1">send r{agent-id} Hello</command>
    </step>

    <sleep duration="5000" />

    <step>
        <command>quit</command>
    </step>

</launcher>