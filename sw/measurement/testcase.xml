<?xml version="1.0" encoding="UTF-8"?>

<launcher>
    <instance id="jvm1" type="local">
        {run-platform} --agent=agent1 --type=sender
    </instance>
    <instance id="jvm2" type="remote" host="{host}">
        {run-platform} --agent=agent2 --type=receiver
    </instance>

    <sleep duration="1000" />

    <step>
        <command for="jvm1">send agent2 Hello</command>
    </step>

    <sleep duration="3000" />

    <step>
        <command for="jvm1">send agent2 Hello2</command>
        <command for="jvm2">send agent1 Hi</command>
    </step>

    <sleep duration="1000" />

    <step>
        <command>quit</command>
    </step>

</launcher>